<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!--Content Page Style--!>
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="NavigationPage.HasNavigationBar" Value="False"></Setter>
        <Setter Property="BackgroundColor" Value="{StaticResource PageBackgroundColor}"></Setter>
    </Style>
    
    <Style TargetType="Grid">
        <Setter Property="Padding" Value="0"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
        <Setter Property="RowSpacing" Value="0"></Setter>
        <Setter Property="ColumnSpacing" Value="0"></Setter>
        <Setter Property="VerticalOptions" Value="Fill"></Setter>
        <Setter Property="HorizontalOptions" Value="Fill"></Setter>
        <Setter Property="BackgroundColor" Value="Transparent"></Setter>        
    </Style>
    
     <!--Button Style--!>
    <Style TargetType="Button" x:Key="NumberButtonStyle">
        <Setter Property="FontSize" Value="22"></Setter>
        <Setter Property="FontFamily" Value="RegularFont"></Setter>
        <Setter Property="TextColor" Value="White"></Setter>
        <Setter Property="BackgroundColor" Value="#202731"></Setter>
        <Setter Property="BorderWidth" Value="0"></Setter>
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}"></Setter>
        <Setter Property="VerticalOptions" Value="Fill"></Setter>
        <Setter Property="HorizontalOptions" Value="Fill"></Setter>
        <Setter Property="CornerRadius" Value="0"></Setter>
        <Setter Property="Padding" Value="0"></Setter>
        <Setter Property="Margin" Value="0,0,1,1"></Setter>
        <Setter Property="FontAutoScalingEnabled" Value="False"></Setter>
    </Style>
    
    <Style TargetType="Button" x:Key="OperatorButtonStyle">
        <Setter Property="FontSize" Value="22"></Setter>
        <Setter Property="FontFamily" Value="RegularFont"></Setter>
        <Setter Property="TextColor" Value="Black"></Setter>
        <Setter Property="BackgroundColor" Value="#efbb31"></Setter>
        <Setter Property="BorderWidth" Value="0"></Setter>
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}"></Setter>
        <Setter Property="VerticalOptions" Value="Fill"></Setter>
        <Setter Property="HorizontalOptions" Value="Fill"></Setter>
        <Setter Property="CornerRadius" Value="0"></Setter>
        <Setter Property="Padding" Value="0"></Setter>
        <Setter Property="Margin" Value="0,0,1,1"></Setter>
        <Setter Property="FontAutoScalingEnabled" Value="False"></Setter>
    </Style>
    
    <Style TargetType="Button" x:Key="ScientificOperatorButtonStyle">
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="FontFamily" Value="RegularFont"></Setter>
        <Setter Property="TextColor" Value="White"></Setter>
        <Setter Property="BackgroundColor" Value="#2c3240"></Setter>
        <Setter Property="BorderWidth" Value="1"></Setter>
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}"></Setter>
        <Setter Property="VerticalOptions" Value="Fill"></Setter>
        <Setter Property="HorizontalOptions" Value="Fill"></Setter>
        <Setter Property="CornerRadius" Value="6"></Setter>
        <Setter Property="Padding" Value="0"></Setter>
        <Setter Property="Margin" Value="6,6"></Setter>
        <Setter Property="Shadow">
            <Shadow 
                Brush="Black" 
                Offset="6,6" 
                Radius="12" 
                Opacity="0.5">                
            </Shadow>
        </Setter>
        <Setter Property="FontAutoScalingEnabled" Value="False"></Setter>
    </Style>
    
    <!-- Label Style--!>
        <Style TargetType="Label" x:Key="EqualsLabelStyle">
            <Setter Property="FontSize" Value="28"></Setter>
            <Setter Property="TextColor" Value="#efbb31"></Setter>
            <Setter Property="FontFamily" Value="LightFont"></Setter>          
            <Setter Property="LineBreakMode" Value="TailTruncation"></Setter>
            <Setter Property="FontAutoScalingEnabled" Value="False"></Setter>
        </Style>
    
        <Style TargetType="Label" x:Key="ResultLabelStyle">
            <Setter Property="FontSize" Value="28"></Setter>
            <Setter Property="TextColor" Value="White"></Setter>
            <Setter Property="FontFamily" Value="RegularFont"></Setter>          
            <Setter Property="LineBreakMode" Value="TailTruncation"></Setter>
            <Setter Property="FontAutoScalingEnabled" Value="False"></Setter>
        </Style>
           
        <Style TargetType="Label" x:Key="InputBoxLabelStyle">
            <Setter Property="FontSize" Value="32"></Setter>
            <Setter Property="TextColor" Value="White"></Setter>
            <Setter Property="FontFamily" Value="LightFont"></Setter>          
            <Setter Property="LineBreakMode" Value="WordWrap"></Setter>
            <Setter Property="FontAutoScalingEnabled" Value="False"></Setter>
        </Style>
       
</ResourceDictionary>
